//GENERALRES
.flex
	display: flex;
	justify-content: center;
	margin-bottom: 0 !important;
*
	box-sizing: border-box;
	outline: none;
body
	color: #16210b;
	font-size: 16px;
	background-image: url(../img/bg.png);
	font-family: 'Open Sans';

a
a:active
	text-decoration: none;
	outline: none;
	color: inherit;

form
	padding: 1em;
	background: rgba(white, .9);
	border-radius: 10px;
	boxShadow();
	text-align: center;
	h3
		color: $morado;

li
	list-style: none;

input,
select,
textarea
	padding: .3em;
	border: 1px solid $azul;
	background: white;
	color: gray;
textarea
	height: 5em;
	resize: none;
button
	background: $azul;
	border: 0;
	border-radius: 8px;
	padding: .5em 1em;
	color: white !important;
	outline: none;
button[type="cancel"]
	background: $naranja;
label.txtArea
	vertical-align: top;

.popup-on
	overflow: hidden;
.u-mapa
	height: 15em;
	width: 100%;
	map
		width: 100%;
		height: 100%;
.u-form-large
	position: absolute;
	top: 1em;
	bottom: 1em;
	left: 1em;
	right: 1em;
	margin: 0 auto;
.Contenedor
	width: 80%;
	max-width: 900px;
	margin: 0 auto;
	overflow: hidden;
	background: white;
	boxShadow();
.Upload
	margin: 0 auto;
	height: 8em;
	bgCover('')
	border-radius: 100%;
	width: 8em;
	position: relative;
	input[type=file]
		position: absolute;
		left: 0;
		height: 100%;
		width: 8em;
		border-radius: 100%;
		border: 0;
		cursor: pointer;
		color: transparent;
		background: transparent;
		&::-webkit-file-upload-button
			visibility: hidden;
		&:hover
			background: rgba(black, 0.6)
			&::before
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				font-family: icomoon;
				content: "\e901";
				color: white;
				font-size: 1.5em;
.Doctor-upload-galeria
	width: 30%;
	height: 10em;
	background: $morado;
	margin: 0 1em 0em;
	bgCover('')
	border-radius: 10px;
	position: relative;
	border: 3px dashed gray;
	background-color: rgba(gray,0.3);
	input[type=file]
		position: absolute;
		left: 0;
		height: 100%;
		width: 100%;
		border-radius: 10px;
		border: 0;
		cursor: pointer;
		color: transparent;
		background: transparent;
		&::-webkit-file-upload-button
			visibility: hidden;
		&:hover
			background: rgba(black, 0.6)
			&::before
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				font-family: icomoon;
				content: "\e901";
				color: white;
				font-size: 1.5em;
